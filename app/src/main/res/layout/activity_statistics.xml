<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics.Statistics">

    <RelativeLayout android:id="@+id/menubar_statistic"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <Button
            android:id="@+id/back_statistic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_icon"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/wins_display"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"/>

        <TextView
            android:id="@+id/losses_display"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"/>

        <TextView
            android:id="@+id/winrate_display"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"/>

        <Button
            android:background="@drawable/new_game_background"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reset_stats_btn"
            />
    </LinearLayout>
</LinearLayout>
